<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginfinal">


    <ImageView
            android:layout_width="191dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/rubywhite"
            android:id="@+id/imageView13"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginStart="108dp" />

    <TextView
            android:text="Welcome to Blog Zone"
            android:layout_width="370dp"
            android:layout_height="55dp"
            android:id="@+id/textView"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageView13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="84dp"
            app:layout_constraintHorizontal_bias="0.609" />

    <Button
            android:text="LOGIN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"

            android:background="@drawable/round16"/>

    <EditText
            android:layout_width="245dp"
            android:layout_height="48dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/black"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.777"
            android:hint="Enter Your Email"
            android:textColorHint="#808080"
            android:autofillHints="emailAddress" />

    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextEmailAddress"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="58dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.871" />

    <EditText
            android:layout_width="245dp"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextTextPassword"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextEmailAddress"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.777"
            android:background="@color/white"
            android:hint="Password"
            android:textColorHint="#808080"
            android:textColor="@color/black" />

    <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@color/white"
            android:textSize="24dp"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPassword"
            android:layout_marginEnd="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:id="@+id/button2"
            android:background="@drawable/gbutton"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.23"
            android:textSize="6dp" />

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:id="@+id/button3"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:background="@drawable/fb_button"/>

    <ImageButton
            android:layout_width="60dp"
            android:layout_height="58dp"
            android:id="@+id/button4"
            android:background="@drawable/twitter_button"
            app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.769" />
</androidx.constraintlayout.widget.ConstraintLayout>